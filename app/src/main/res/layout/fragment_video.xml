<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".Fragment.VideoFragment"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/parentt"
    android:layout_height="match_parent"
    android:background="@color/goodgrey"
    >




    <Spinner
        android:id="@+id/spinnerVidioSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey"
        android:layout_gravity="end"
        />


    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        app:controller_layout_id="@layout/custom_control"
        android:id="@+id/plaayerr"

        />

    <Button
        android:id="@+id/btnTopicNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:text="NEXT" />

</LinearLayout>

